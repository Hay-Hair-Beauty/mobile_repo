<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/soft_gray</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="BottomNavigationViewCustomStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemIconPadding">8dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ThemeCalender" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="LogoutBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/logout_btn</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:backgroundTintMode">src_over</item>
        <item name="android:backgroundTint">@null</item>
    </style>



</resources>