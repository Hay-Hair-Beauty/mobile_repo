<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Untuk indikator aktif (selected) -->
    <item android:drawable="@drawable/indicator_selected" android:state_selected="true"/>
    <item android:drawable="@drawable/indicator_selected" android:state_focused="true"/>
    <item android:drawable="@drawable/indicator_selected" android:state_pressed="true"/>

    <!-- Untuk indikator tidak aktif (unselected) -->
    <item android:drawable="@drawable/indicator_unselected"/>
</selector>
