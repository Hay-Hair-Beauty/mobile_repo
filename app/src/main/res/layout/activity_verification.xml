<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_white"
    tools:context=".view.verification.VerificationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/verificationLayout">

        <ImageView
            android:id="@+id/imgLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_login"
            android:src="@drawable/image_verification"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:alpha="0.4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/titleVerificationActivity" />

        <TextView
            android:id="@+id/titleVerificationActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/title_verification_activity"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogin"/>

        <TextView
            android:id="@+id/descVerificationActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/desc_verification_activity"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toBottomOf="@+id/titleVerificationActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/verificationEditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descVerificationActivity">

            <EditText
                android:id="@+id/codeVerification1"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:inputType="number"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="1"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:layout_weight="1"
                android:alpha="0.3"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_ed_verification"/>

            <EditText
                android:id="@+id/codeVerification2"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:alpha="0.3"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_ed_verification"/>

            <EditText
                android:id="@+id/codeVerification3"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:gravity="center"
                android:alpha="0.3"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_ed_verification"/>

            <EditText
                android:id="@+id/codeVerification4"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:fontFamily="@font/poppins_semibold"
                android:alpha="0.3"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_ed_verification"/>

            <EditText
                android:id="@+id/codeVerification5"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="12dp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:alpha="0.3"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_ed_verification"/>

            <EditText
                android:id="@+id/codeVerification6"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:alpha="0.3"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:imeOptions="actionNext"
                android:background="@drawable/rounded_ed_verification"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/countTimerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/verificationEditTextLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/infoCountTimerExpiredCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/info_count_timer"/>

            <TextView
                android:id="@+id/resendNowCodeVerification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/orange"
                android:text="@string/resend_now"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="@string/btn_confirm"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="64dp"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintTop_toBottomOf="@+id/countTimerLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/hayLogo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/hay_icon"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirm"
            android:contentDescription="@string/description_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
