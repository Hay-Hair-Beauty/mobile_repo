<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecomendation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/materialCardViewFilledStyle"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@drawable/first_carousel_bg"
            android:scaleType="centerCrop"
            android:contentDescription="@string/product_recomendation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_product_recomendation"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/poppins_semibold"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                />
            <TextView
                android:id="@+id/descProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11sp"
                android:text="@string/example_desc_product_recomendation"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/dark_gray"
                android:ellipsize="end"
                android:maxLines="3"/>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>